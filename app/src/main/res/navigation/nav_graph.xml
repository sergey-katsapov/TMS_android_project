<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.tms_android_project.ui.fragments.AllTasksFragments"
        android:label="@string/all_tasks_fragment_label"
        tools:layout="@layout/fragment_all_tasks">

        <action
            android:id="@+id/action_AllTasksFragment_to_LoginFragment"
            app:destination="@id/SecondFragment" />
    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.tms_android_project.ui.fragments.LoginFragment"
        android:label="@string/login_fragment_label"
        tools:layout="@layout/fragment_login_screen">

        <action
            android:id="@+id/action_LoginFragment_to_AllTasksFragment"
            app:destination="@id/LoginFragment" />
    </fragment>
</navigation>